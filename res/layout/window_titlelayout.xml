<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="430dp" android:layout_height="46dp" 
    android:orientation="horizontal" android:background="@drawable/window_titlebar"
    android:splitMotionEvents="false">
    <ImageView android:src="@drawable/window_titlebar" android:contentDescription="@string/bk"
        android:layout_width="match_parent" android:layout_height="match_parent"/>
    <Button android:id="@+id/window_entry" android:background="@drawable/window_entry"
        android:layout_width="56dp" android:layout_height="42dp"
        android:layout_marginLeft="3dp" android:layout_marginTop="2dp"/>
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="171dp" android:layout_height="44dp" 
        android:layout_marginLeft="258dp" android:layout_marginTop="1dp">
	    <!-- 刷新按钮 -->
	    <Button android:id="@+id/window_refresh" android:background="@drawable/window_refresh"
	   	    android:layout_width="56dp" android:layout_height="match_parent"/>
	    <!-- 删除按钮 -->
	   	<Button android:id="@+id/window_delete" android:background="@drawable/window_delete"
	   	    android:layout_width="56dp" android:layout_height="match_parent" 
	   	    android:layout_marginLeft="2dp"/>
	   	<!-- 关闭按钮 -->
	   	<Button android:id="@+id/window_close" android:background="@drawable/window_close"
	   	    android:layout_width="56dp" android:layout_height="match_parent"
	   	    android:layout_marginLeft="1dp"/>
	</LinearLayout>
</FrameLayout>